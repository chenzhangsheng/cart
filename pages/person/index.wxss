/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color:#495060;
  margin-bottom: 0.5rem;
}

.usermotto {
  margin-top: 200px;
}
.divider{
  height:0.5rem;
  width:100%;
  background-color:#f8f8f9;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 120rpx 0;
  box-sizing: border-box;
} 
